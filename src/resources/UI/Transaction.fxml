        <VBox alignment="CENTER" layoutX="40.0" layoutY="18.0" prefHeight="174.0" prefWidth="224.0" spacing="10.0">
            <children>
                <Label text="Transaction Details" />
                <TextField fx:id="montantTextField" promptText="Amount" />
