<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.koolart.esprit.demo2.ListeRestaurant">
    <children>
        <TableView fx:id="restaurantTable" layoutX="10.0" layoutY="10.0" prefHeight="300.0" prefWidth="580.0">
            <columns>
                <TableColumn fx:id="restoId" text="Restaurant ID" />
                <TableColumn fx:id="restoName" text="Name" />
                <TableColumn fx:id="restoLocation" text="Location" />
                <TableColumn fx:id="restoCategory" text="Category" />
            </columns>
        </TableView>
        <Button layoutX="10.0" layoutY="320.0" mnemonicParsing="false" onAction="#onClick" text="Refresh Restaurants" />
      <Button layoutX="143.0" layoutY="320.0" mnemonicParsing="false" onAction="#onAjouter" text="Ajouter" />
    </children>
</AnchorPane>
