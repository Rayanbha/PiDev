<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="240.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.koolart.esprit.demo2.CreateRestaurant">

    <VBox alignment="CENTER" layoutX="8.0" layoutY="10.0" prefHeight="217.0" prefWidth="303.0" spacing="10">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Create New Restaurant" />

        <HBox alignment="CENTER" spacing="10">
            <Label text="Name:" />
            <TextField fx:id="restaurantNameField" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Location:" />
            <TextField fx:id="restaurantLocationField" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Category:" />
            <TextField fx:id="restaurantCategoryField" />
        </HBox>

        <Button onAction="#createRestaurant" text="Create" />
    </VBox>

</AnchorPane>
