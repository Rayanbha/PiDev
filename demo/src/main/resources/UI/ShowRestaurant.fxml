<AnchorPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Restaurant.ShowRestaurant">
   <ImageView fitHeight="400.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="/Images/Restaurant_BG.jpg" />
      </image>
   </ImageView>
      <ImageView fx:id="imageView" fitHeight="106.0" fitWidth="252.0" layoutX="425.0" layoutY="277.0" preserveRatio="true" />

    <GridPane layoutX="315.0" layoutY="70.0" prefHeight="195.0" prefWidth="316.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="130.0" minWidth="10.0" prefWidth="50.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="142.0" minWidth="10.0" prefWidth="116.0" />
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="0.0" prefWidth="7.0" />
         <ColumnConstraints maxWidth="265.0" minWidth="57.0" prefWidth="199.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="55.0" minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="51.0" minHeight="10.0" prefHeight="51.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label prefHeight="27.0" prefWidth="55.0" text="Name:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Location:" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Category:" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label fx:id="nameLabel" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <Label fx:id="locationLabel" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <Label fx:id="categoryLabel" GridPane.columnIndex="3" GridPane.rowIndex="3" />
        </children>
    </GridPane>

    <HBox alignment="CENTER" spacing="10" />
    <Button fx:id="editButton" layoutX="508.0" layoutY="28.0" onAction="#onEdit" text="Edit" />
    <Button fx:id="deleteButton" layoutX="412.0" layoutY="28.0" onAction="#onDelete" text="Delete" />
</AnchorPane>
